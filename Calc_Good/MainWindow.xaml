<Window x:Class="Calc_Good.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc_Good"
        mc:Ignorable="d"
        Title="Checker" Height="200" Width="400">
    <Grid Background="Green">
        <TextBlock Text="Введите длины сторон треугольника" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Foreground="White" Margin="0,10,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="SideA" Width="60" HorizontalContentAlignment="Center" FontSize="16"/>
            <TextBox Name="SideB" Width="60" HorizontalContentAlignment="Center" FontSize="16"/>
            <TextBox Name="SideC" Width="60" HorizontalContentAlignment="Center" FontSize="16"/>
        </StackPanel>

        <Button Content="Проверить" Width="100" Height="40" Background="Yellow" Foreground="Black" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"
                Click="CheckTriangleType"/>
    </Grid>
</Window>